%h1 #{@user.name}

= image_tag avatar_url(@user)

%fieldset
  %legend User Information
  %div
    %b Admin:
    = @user.is_admin
  %div
    - if @user.email
      %b Email:
      = @user.email
  %div
    %b Public Name:
    = @user.public_name
  %div
    %b School:
    = @user.school
  %div
    %b Class Year: 
    = @user.year
  %div
    %b Major:
    = @user.major
  %div
    %b Github:
    = @user.github
%div
  - if is_admin? or is_user?
    = link_to "Edit Profile", edit_user_path, :class => "button"
    = link_to t('.back', :default => t("helpers.links.back")), '/users', :class => 'button secondary'
