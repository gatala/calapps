%h1 Update Account

= form_for @user, :html => {:multipart => true} do |f|

  = f.label :name, 'Name'
  = f.text_field :name

  = f.label :email, "Email"
  = f.email_field :email

  = f.label :image, "Upload Profile"
  = f.file_field :image
  
  .form-actions
    = f.submit 'Update', :class => "btn btn-primary"
    = link_to 'Back', user_path, :class => "btn"
