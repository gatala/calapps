%h1 Update Account

= form_tag user_path(@user), :method => :put do

  = label :user, :name, 'Name'
  = text_field :user, 'name'

  = label :user, :email, "Email"
  = email_field :user, 'email'
  
  .form-actions
    = submit_tag 'Update', :class => "btn btn-primary"
    = link_to 'Back', user_path, :class => "btn"
