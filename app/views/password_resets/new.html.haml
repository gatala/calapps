.container
  %h1 Reset Password

  = form_tag password_resets_path, :method => :post do
    %fieldset
      %legend Reset Password
      #email.form-group
        = label_tag :email, :class => "control-label reserve-label"
        .reserve-input
          = text_field_tag :email, params[:email]
    #submit
      = submit_tag "Reset Password", :class => "btn btn-danger"