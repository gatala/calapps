= form_for @review, :url => { :action => "create" } do |new_review|
	%fieldset
		%legend New Review
		= new_review.label :review_rating, "Review"
		= new_review.radio_button :review_rating, '1'
		%i.fi-star
		%br
		= new_review.radio_button :review_rating, '2'
		%i.fi-star
		%i.fi-star
		%br
		= new_review.radio_button :review_rating, '3'
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%br
		= new_review.radio_button :review_rating, '4'
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%br
		= new_review.radio_button :review_rating, '5'
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%i.fi-star
		%br
		= new_review.label :review_text, 'Comments'
		= new_review.text_area :review_text, :placeholder => 'Your Comment Here'
	= new_review.submit 'Save Changes', :class => "button success"