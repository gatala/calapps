!!! 5
%html(lang="en")
  %head
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "CalApps"
    %meta{:name =>"viewport", :content => "width=device-width, initial-scale=1.0"}
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "welcome"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "holder"

  - homepage = @homepage ? 'homepage': ''
  %body{:class => homepage}
    .fixed
      %nav.top-bar{:data=>{:topbar => true}}
        %ul.title-area
          / %li.name
          /   %h1=link_to "CalApps", '/'
        %section.top-bar-section
          %ul.left
            %li.has-dropdown.not-click
              %ul.title-area
                %a{href: "/"} CalApps
              %ul.dropdown
                %li
                  %u
                    %h5
                      %a{href: "#"} Categories:
                - @categories.each do |category|
                  %li
                    %a{href: "/category/#{category[0]}"} #{category[0]}
              %li.divider
            %li.has-form
              = form_tag "/calapps", :method => :get do
                .row.collapse
                  .large-8.small-9.columns
                    %input{:type => "text", :placeholder => "Find", :style => "height: 30px;", :name => "search_query", :value => session[:search_query]}
                    = hidden_field_tag :tag, session[:tag] if session[:tag]
                    = hidden_field_tag :pending, session[:pending] if session[:pending]
                    = hidden_field_tag :archived, session[:archived] if session[:archived]
                  .large-4.small-3.columns
                    %input.alert.button.expand{:type => "submit", :value => "Search"}
            %li.divider
            %li
              = link_to 'Gallery', '/calapps'
            - if is_admin?
              %li.divider
              %li
                = link_to 'Users', '/users'
            %li.divider
            %li
              = link_to 'About', '/welcome/about'
            %li.divider
            %li
              = link_to 'Contact', '/contact'
            %li.divider
          %ul.right
            - if signed_in?
              %li.has-dropdown.not-click
                %a{:href => "#"} #{@current_user.name}
                %ul.dropdown
                  %li= link_to "Profile", @current_user
                  %li= link_to "Sign out", signout_path, :method =>"delete"
            -else
              %li
                %a#loginlink{:href => "/signin"} Login
              %li
                %a#signuplink{:href => signup_path} Create Account
    .row
      .large-12.columns
        - if flash[:notice]
          .alert-box{:data=>{:alert => true}}
            #notice.message= flash[:notice]
            %a.close{:href => "#"} &times;
        - elsif flash[:warning]
          .alert-box{:data=>{:alert => true}}
            #warning.message= flash[:warning]
            %a.close{:href => "#"} &times;
        = yield
      = javascript_include_tag "application"




