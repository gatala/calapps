%h1 Edit Existing CalApp

.row
  .span6.offset0
    = form_for(@calapp) do |f|
      = render 'shared/error_messages'

= form_for @calapp do |f|

  = f.label :name, 'Name of Application'
  = f.text_field :name

  = f.label :URL, "Application URL"
  = f.url_field :URL

  = f.label :creator, "Creator(s)"
  = f.text_field :creator

  = f.label :description, "Description"
  = f.text_area :description

  = f.label :tag_list, "Tags (separate by commas)"
  = f.text_field :tag_list

  -if is_admin?
    = f.label :user_email, "Owner email"
    = f.text_field :user_email

  .form-actions
    = f.submit 'Update', :class => "btn btn-primary"
    = link_to 'Back to App Details', calapp_path(@calapp), :class => "btn"
    = link_to 'Back to App List', calapps_path, :class => "btn"
