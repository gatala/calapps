- model_class = Calapp
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @calapp.name
%p
  %strong= model_class.human_attribute_name(:URL) + ':'
  %br
  = @calapp.URL
%p
  %strong= model_class.human_attribute_name(:creator) + ':'
  %br
  = @calapp.creator
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @calapp.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), calapps_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_calapp_path(@calapp), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), calapp_path(@calapp), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
