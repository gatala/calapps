%h1 Alphabetized View
%a.button.dropdown.small{:href=>"#", :data=>{:dropdown=>"drop"}} Actions
%ul#drop.f-dropdown{:data=>{"dropdown-content".to_sym=>true}}
  %li= link_to "List View", "/calapps"
  %li= link_to "Grid View", "/gallery"
  - if is_admin?
    - if @pending 
      %li= link_to "Show Approved", "/list"
    - else
      %li= link_to "Show Pending", "/list?pending=>true"
  -if signed_in?
    %li= link_to "Add an Application", new_calapp_path
- @calapps.keys.sort.each do |starting_letter|
  %hr
  %h3=starting_letter
  %hr
  %ul.small-block-grid-4
    - @calapps[starting_letter].each do |calapp|
      %li
        =link_to calapp_path(calapp), :class => "th" do
          = image_tag thumbnail_url(calapp)
          .caption
            %h3= calapp.name
            %p
              %em= calapp.creator